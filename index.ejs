<div class="author">
    <h1 class="author__heading">Hi, I am Pritesh.</h1>
    <p class="author__body">Student and Data science enthusiast</p>
  </div>
  
  <img src="/img/4da0c982-4e8c-4236-a1f6-385324566696.jpeg" alt="My photo" class="hero-image" width="400" height="400">
  
  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
  
    <ul class="article-ul">
        <% data.forEach(post => { %>
          <li>
            <a href="/post/<%= post._id %>">
              <span><%= post.title %></span>
              <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
          </li>
        <% }) %>
      </ul>

      <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
      <% } %>

    </section>
